@model IEnumerable<mvcProgramacionWebII.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center my-4">PRODUCTOS</h2>

<div class="row mb-3">
    <div class="col-md-4">
        <img src="~/js/Galaxi.jpeg" width="150" alt="Samsung Logo" class="img-fluid rounded" />
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Detalles</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

